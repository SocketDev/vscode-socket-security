{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ESNext",
		"lib": ["ESNext", "DOM"],
        "outDir": "out",
        "sourceMap": true,
        "rootDir": "settings",
        "skipLibCheck": true,
        "esModuleInterop": true,
        /* Strict Type-Checking Option */
        "strict": true,   /* enable all strict type-checking options */
        /* Additional Checks */
        // "noUnusedLocals": true, /* Report errors on unused locals. */
        "types": ["node"]
    },
    "typeAcquisition": {
        "enable": true
    },
    "include": [
        "settings"
    ],
    "exclude": [
        "node_modules"
    ]
}
