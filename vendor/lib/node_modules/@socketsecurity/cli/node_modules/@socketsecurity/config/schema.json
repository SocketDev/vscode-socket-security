{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": {
      "type": "integer"
    },
    "projectIgnorePaths": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "issueRules": {
      "type": "object",
      "required": [],
      "additionalProperties": {
        "type": "boolean"
      },
      "default": {}
    },
    "githubApp": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "projectReportsEnabled": {
          "type": "boolean",
          "default": true
        },
        "pullRequestAlertsEnabled": {
          "type": "boolean",
          "default": true
        }
      },
      "required": [],
      "additionalProperties": false,
      "default": {
        "enabled": true,
        "projectReportsEnabled": true,
        "pullRequestAlertsEnabled": true
      }
    }
  },
  "required": [
    "version"
  ],
  "additionalProperties": false
}
