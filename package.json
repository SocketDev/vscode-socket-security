{
    "name": "vscode-socket-security",
    "displayName": "Socket Security",
    "description": "Editor integration with Socket Security",
    "version": "0.0.1",
    "private": true,
    "license": "MIT",
    "engines": {
        "vscode": "^1.26.0"
    },
    "activationEvents": [
        "workspaceContains:**/package.json",
        "workspaceContains:**/socket.yml"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "properties": {
                "socket-security.showAllIssueTypes": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show all issue types, even issues hidden by default."
                },
                "socket-security.minIssueLevel": {
                    "type": "string",
                    "default": "low",
                    "enum": [
                        "critical",
                        "high",
                        "middle",
                        "low"
                    ],
                    "description": "Hide all issues that are less important than this level, note some issues are hidden by default so you may also wish to enable showing all issue types still."
                }
            }
        }
    },
    "publisher": "SocketSecurity",
    "scripts": {
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
        "test-compile": "tsc -p ./",
        "lint": "eslint \"src/**/*.ts\"",
        "compile": "npm run esbuild",
        "watch": "npm run esbuild-watch",
        "package-for-vscode": "vsce package --dependencies"
    },
    "dependencies": {
        "@socketsecurity/cli": "^0.3.0",
        "@socketsecurity/config": "^2.0.0",
        "acorn": "^8.8.1",
        "acorn-walk": "^8.2.0",
        "ast-types": "^0.14.2",
        "json-to-ast": "^2.1.0",
        "octokit": "^2.0.10",
        "safe-stable-stringify": "^2.4.1",
        "semver": "^7.3.8",
        "yaml": "^2.1.3"
    },
    "devDependencies": {
        "@types/ini": "^1.3.31",
        "@types/json-to-ast": "^2.1.2",
        "@types/node": "^16.11.7",
        "@types/vscode": "^1.26.0",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "esbuild": "^0.16.7",
        "eslint": "^8.26.0",
        "typescript": "^4.8.4",
        "vsce": "^2.16.0"
    },
    "repository": {
        "url": "https://github.com/SocketDev/vscode-socket-security"
    }
}
